<?xml version="1.0" encoding="UTF-8"?>

<LinearLayout tools:context=".MilkActivity"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginBottom="30dp"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:layout_marginTop="30dp"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent">


    <LinearLayout
        android:layout_height="53dp"
        android:layout_width="match_parent">

        <ImageButton
            android:layout_height="match_parent"
            android:layout_width="68dp"
            app:srcCompat="@drawable/btn_left"
            android:scaleType="centerCrop"
            android:id="@+id/btnHome" />

        <TextView
            android:layout_height="match_parent"
            android:layout_width="208dp"
            android:id="@+id/textView4"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:text="분유"
            android:gravity="center"
            android:layout_weight="1" />

        <ImageButton
            android:layout_height="match_parent"
            android:layout_width="68dp"
            app:srcCompat="@drawable/img_save2"
            android:scaleType="centerCrop"
            android:id="@+id/btnSave"
            android:layout_weight="1" />

    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_height="53dp"
        android:layout_width="match_parent">

        <EditText
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:id="@+id/MilkMemo"
            android:textSize="18sp"
            tools:gravity="center"
            android:inputType="textPersonName"
            android:hint="메모를 입력하세요"
            android:ems="10"
            android:layout_gravity="center" />

    </LinearLayout>


    <FrameLayout
        android:id="@+id/FrameLayout"
        android:layout_width="match_parent"
        android:layout_height="445dp">


        <com.example.tway.CustomView
            android:id="@+id/customView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/img_milk" />
    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnMilkDown"
            android:layout_width="68dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="-"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/txtMilkSize"
            android:layout_width="213dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btnMilkUp"
            android:layout_width="68dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="+"
            android:textSize="24sp" />

    </LinearLayout>

</LinearLayout>
