<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context=".HomeActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="8dp"
            android:text="babycare"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp">

        <FrameLayout
            android:layout_width="134dp"
            android:layout_height="129dp">



<!--            <ImageView-->
<!--                android:id="@+id/babyFace"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="match_parent"-->
<!--                android:background="@drawable/rounded"-->
<!--                app:srcCompat="@android:drawable/screen_background_dark" />-->
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/babyFace"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:src="@android:drawable/screen_background_dark"
                app:civ_border_color="#FFCCCCCC"
                app:civ_border_width="2dp" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="20dp">

            <TextView
                android:id="@+id/nameText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8.5dp"
                android:text="TextView"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/ageText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8.5dp"
                android:text="TextView"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/ddayText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8.5dp"
                android:text="TextView"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/genderblood"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8.5dp"
                android:text="TextView"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnMilk"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="3dp"
            android:layout_weight="1"
            android:background="@drawable/round_box_white"
            android:drawableLeft="@drawable/baby_hfeeding"
            android:paddingLeft="20dp"
            android:paddingRight="15dp"
            android:text="분유"
            android:textSize="17sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnSleep"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:layout_weight="1"
            android:background="@drawable/round_box_white"
            android:drawableLeft="@drawable/baby_hsleep"
            android:paddingLeft="20dp"
            android:paddingRight="15dp"
            android:text="수면"
            android:textSize="17sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnList"
            android:layout_width="wrap_content"
            android:layout_height="87dp"
            android:layout_marginTop="6dp"
            android:layout_weight="1"
            android:background="@drawable/round_box_white"
            android:text="기록"
            android:textSize="17sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>