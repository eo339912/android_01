<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="30dp"
        android:orientation="vertical"
        tools:context=".SleepActivity">

        <LinearLayout
            android:layout_height="53dp"
            android:layout_width="match_parent">

            <ImageButton
                android:id="@+id/btnHome"
                android:layout_width="68dp"
                android:layout_height="match_parent"
                android:backgroundTint="#FAFAFA"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/btn_left" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="208dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="수면"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/btnSave"
                android:layout_width="68dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#FAFAFA"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/img_save2" />

        </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_height="53dp"
        android:layout_width="match_parent">

        <EditText
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:id="@+id/SleepMemo"
            android:textSize="18sp"
            tools:gravity="center"
            android:inputType="textPersonName"
            android:hint="메모를 입력하세요"
            android:ems="10"
            android:layout_gravity="center" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="329dp">

        <ImageButton
            android:id="@+id/btn_start"
            android:layout_width="217dp"
            android:layout_height="215dp"
            android:onClick="myOnClick"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/img_sleep2" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="103dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="80dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="우리아기 수면체크"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/txtWakeup"
            android:layout_width="246dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="250dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="아기가 잠들면 터치해 주세요!"
            android:textSize="18dp" />

    </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="86dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/timeOut"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="30sp"
                android:background="#cccccc"
                android:textColor="#777777"
                android:text="00:00:00"/>
        </LinearLayout>

    </LinearLayout>